---
import { Image } from "astro:assets";
import Instagram from "../../assets/instagram.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/logo-alt.svg";
import Twitter from "../../assets/twitter.svg";
import ShortForm from "../ui/ShortForm.astro";

const logos = [
  {
    name: "Instagram",
    src: Instagram,
    link: "https://www.instagram.com/whiskrs.digital/",
  },
  {
    name: "Linkedin",
    src: Linkedin,
    link: "https://www.linkedin.com/in/mininduvithanage/",
  },
  { name: "Twitter", src: Twitter, link: "https://twitter.com" },
];

const links = [
  { name: "About us", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Use Cases", href: "#cases" },
  { name: "Pricing", href: "#Testimonials" },
  { name: "Blog", href: "#Home" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-gray py-[55px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <Image src={Logo} width="200" alt="whiskrs.digital logo" />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <!-- <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul> -->
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5 text-center md:text-left text-2xl text-green">
              Contact us
            </h3>
            <div class="flex flex-col justify-between gap-4">
              <span> Email: hello@whiskrs.digital </span>
              <span> Phone: (+94) 76 369 1002 </span>
              <span class="lg:w-3/4">
                Address: Underground Laboratory, Bataganvila, Galle, Sri Lanka
              </span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
            <ShortForm />
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-gray mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span
          >Made With <a
            class="underline"
            target="_blank"
            href="https://astro.build">Astro</a
          > by
          <a class="underline" target="_blank" href="https://whiskrs.digital"
            >Whiskrs.digital</a
          ></span
        >&nbsp
        <span>
          Credits (
          <a
            href="https://www.olgaskuja.design/"
            target="_blank"
            class="underline">Olga</a
          >,
          <a
            href="https://www.manulthanura.com  /"
            target="_blank"
            class="underline">Manul</a
          >,
          <a
            href="https://esteban-vasquez.netlify.app/"
            target="_blank"
            class="underline">Esteban</a
          >)
          <span> &</span>
          <a
            class="underline"
            href="https://creativecommons.org/licenses/by/4.0/"
            target="_blank">License</a
          >
        </span>
      </div>
    </div>
  </div>
</section>
